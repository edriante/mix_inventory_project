<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Orders</title>
    <link rel="stylesheet" href="style.css">
   
</head>
<body>
    <!-- Sidebar Section -->
    <div class="sidebar" id="sidebar">
        <div class="logo">
            <h2>Mix & Match</h2>
        </div>
        <nav>
            <ul>
                <li><a href="/" class="active">Dashboard</a></li>
                <li><a href="/inventory">Users</a></li>
                <li><a href="/production">Products</a></li>
            </ul>
        </nav>
    </div>

    <!-- Main Content Section -->
    <div class="main-content">
        <button class="toggle-sidebar-btn" id="toggleSidebarBtn">â˜°</button>
        <div class="content">
            <div class="header">
                <h1>Products</h1>
                <a href="/products/new">  <button class="add-order-btn">+ Add Product</button></a>
             </div>
              <table> 
                <thead> 
                    <tr> 
                        <th>Name</th> 
                        <th>Description</th> 
                        <th>Price</th> 
                        <th>Quantity</th>
                         <th>Actions</th>
                         </tr>
                         </thead>
                          <tbody>
                             <% products.forEach(product => { %> 
                                <tr> 
                                    <td><%= product.name %></td> 
                                    <td><%= product.description %></td> 
                                    <td><%= product.price %></td> 
                                    <td><%= product.quantity %></td>
                                     <td> <a href="/products/<%= product.id %>/edit" class="edit-btn">Edit</a> <form action="/products/<%= product.id %>?_method=DELETE" method="POST" class="delete-form"> <button type="submit" class="delete-btn">Delete</button> </form> </td> 
                                    </tr> <% }); %> 
                                </tbody> 
                            </table> 
                        </div> 
                    </div>
<script>
    // script.js
document.addEventListener("DOMContentLoaded", () => {
    const sidebar = document.getElementById("sidebar");
    const toggleBtn = document.getElementById("toggleSidebarBtn");
    const mainContent = document.querySelector(".main-content");

    toggleBtn.addEventListener("click", () => {
        sidebar.classList.toggle("hidden");
        mainContent.classList.toggle("expanded");
    });
});

</script>
</body>
 </html>